{{#if showProductUpdateForm}}
<h1>Update this product</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>

    <div class="form-group">
      <label for="img">Image</label>
      {{input value=img id="img"}}
    </div>

    <button class="btn btn-default" {{action 'updateProduct' product}}>Update</button>
  </form>
</div>
{{else}}
  <button class="btn btn-default" {{action 'updateFormShow'}}>Update</button>
{{/if}}

{{#if showProductUpdateForm}}
<h4>Update this product</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input class="form-control" value=name id="name" placeholder=product.name}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input class="form-control" value=price id="price" placeholder=product.price}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input class="form-control" value=description id="description" placeholder=product.description}}
    </div>

    <div class="form-group">
      <label for="img">Image</label>
      {{input class="form-control" value=img id="img"}}
    </div>

    <button class="btn btn-info" {{action 'updateProduct' product}}>Update</button>
  </form>
</div>
{{else}}
  <button class="btn btn-info" {{action 'updateFormShow'}}>Update</button>
{{/if}}

{{#if addNewReview}}
  <h1 class="subhead-text">What do you think of this product?</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Your review:</label>
          {{input class="form-control" value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="author">Your name:</label>
          {{input class="form-control" value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="rating">How would you rate this product?</label>
          {{input type="number" min="1" max="5" class="form-control" value=rating id="rating" placeholder="1-5"}}
        </div>

        <button class="btn btn-success" {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn btn-default" {{action 'showNewReviewForm'}}>Review this product!</button>
{{/if}}
